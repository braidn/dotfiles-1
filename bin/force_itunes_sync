#!/bin/bash

# force_itunes_sync -- forces iTunes to sync with the device passed by parameter
#
# SYNOPSIS
#   force_itunes_sync Newton
#
#  by Bruno Gama <twitter: @brunogama>
# Tested on 10.6 and 10.7.
# To sync multiple devices
# My iPhone name is Newton and the iPad is Coruscant
# for device in Newton Coruscant;do sh bin/force_itunes_sync $device;done;
#

exec osascript <<EOF
if not checkItunesIsActive() then return

tell application "iTunes"
    try
        set src to (some source whose name contains "$*")
        tell src to update
    end try
end tell

to checkItunesIsActive()
    tell application id "sevs" to return (exists (some process whose name is "iTunes"))
end checkItunesIsActive
