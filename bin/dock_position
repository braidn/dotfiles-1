#!/bin/bash



# dock_position -- set the dock position
#
# SYNOPSIS
#   dock_position l|c|r
#
#  by Bruno Gama <twitter: @brunogama>
#
# Tested on 10.7.
#


_dock() {
    defaults write com.apple.dock orientation -string $* > /dev/null 2>&1
    killall Dock > /dev/null 2>&1
    echo "The Dock position is set to ${*}"
}

_help()
{
    echo "Valid parameters:"
    echo $'\t -l set dock orientation to the Left'
    echo $'\t -c set dock orientation to the Center'
    echo $'\t -r set dock orientation to the Right'
}
while getopts lcr op; do
    case "${op}" in
        l) ___p='left' ;;
        c) ___p='center' ;;
        r) ___p='right' ;;
        *) _help;;
    esac
done

[ $___p ] && _dock $___p

unset ___p _dock _help

exit 0

unset pos
