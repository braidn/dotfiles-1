# dock_position -- set the dock position
#
# SYNOPSIS
#   dock_position left|center|right
#
#  by Bruno Gama <twitter: @brunogama>
#
# Tested on 10.7.
#
pos=$1
if [ -z "$pos" ]; then
    echo 'You should set the new position to the Dock'
    echo '\t left|center|right'
else
    defaults write com.apple.dock orientation -string $pos > /dev/null 2>&1
    killall Dock
fi

unset pos
